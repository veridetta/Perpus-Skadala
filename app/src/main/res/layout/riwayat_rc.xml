<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_marginLeft="@dimen/_6sdp"
    android:layout_marginRight="@dimen/_6sdp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_400"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardMaxElevation="@dimen/_6sdp"
        app:cardBackgroundColor="@color/white"
        android:padding="@dimen/_6sdp"
        app:cardElevation="@dimen/_3sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:background="@drawable/logo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:background="@color/grey_800"
                android:alpha="0.8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_12sdp"
                    android:padding="@dimen/_6sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@color/blue_400"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/red_400"
                            app:cardElevation="@dimen/_3sdp"
                            android:alpha="0.8">
                            <TextView
                                android:layout_margin="@dimen/_5sdp"
                                android:id="@+id/i_tgl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Motor Sport"
                                android:textSize="@dimen/_8sdp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@color/blue_400"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/blue_A700"
                            app:cardElevation="@dimen/_3sdp"
                            android:alpha="0.8">
                            <TextView
                                android:layout_margin="@dimen/_5sdp"
                                android:id="@+id/i_jam"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="2010"
                                android:textSize="@dimen/_8sdp"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:background="@color/blue_400"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardMaxElevation="@dimen/_6sdp"
                            app:cardBackgroundColor="@color/green_700"
                            app:cardElevation="@dimen/_3sdp"
                            android:alpha="0.8">
                            <TextView
                                android:layout_margin="@dimen/_5sdp"
                                android:id="@+id/i_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="Submitted"
                                android:textSize="@dimen/_8sdp"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_4sdp"
                        android:background="@color/grey_500"/>
                    <TextView
                        android:id="@+id/i_keterangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Anda melakukan order buku dengan id buku adalah
1 pada tanggal 2021-07-22 dan pukul 00.01. "/>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>